{
  "name": "wishlist",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "npm run up:all",
    "stop": "npm run down",
    "api:dev": "ASPNETCORE_ENVIRONMENT=Development dotnet run --project backend/src/Wishlist.Api.csproj",
    "api:dev:migrate": "ASPNETCORE_ENVIRONMENT=Development APPLY_MIGRATIONS_ON_STARTUP=true dotnet run --project backend/src/Wishlist.Api.csproj",
    "api:bootstrap": "docker compose up -d postgres && npm run ef:update && npm run api:dev",
    "dotnet:tools": "dotnet tool restore",
    "db:up": "docker compose up -d postgres",
    "ef:update": "dotnet ef database update --project backend/src/Wishlist.Api.csproj --startup-project backend/src/Wishlist.Api.csproj",
    "backend:run": "npm --workspace backend run run",
    "backend-run": "npm run backend:run",
    "frontend:dev": "npm --workspace frontend run dev",
    "frontend-dev": "npm run frontend:dev",
    "format": "npm run format -ws --if-present",
    "lint": "npm run lint -ws --if-present",
    "test": "npm run test -ws --if-present",
    "build": "npm run build -ws --if-present",
    "test:e2e:visual": "playwright test e2e/visual.spec.ts",
    "test:e2e:visual:update": "playwright test e2e/visual.spec.ts --update-snapshots",
    "up:all": "docker compose up --build",
    "up-all": "npm run up:all",
    "down": "docker compose down",
    "up:dev": "docker compose -f docker-compose.dev.yml up",
    "down:dev": "docker compose -f docker-compose.dev.yml down"
  }
}
