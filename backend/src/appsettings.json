{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=wishlist.dev.db"
  },
  "Auth": {
    "Issuer": "wishlist.api",
    "Audience": "wishlist.web",
    "AccessTokenSecret": "dev-access-secret-change-me-with-at-least-32-bytes",
    "RefreshTokenPepper": "dev-refresh-pepper-change-me-with-at-least-32-bytes",
    "AccessTokenTtlMinutes": 15,
    "RefreshTokenTtlDays": 30,
    "UseRefreshCookie": false,
    "RefreshCookieName": "refreshToken"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
